A = importdata('day8_test_input.txt');
B = {A.textdata,A.data};

ptr = 1;
global accumulator;
accumulator = 0;
halt = 0;

seen = zeros(size(A.textdata));

while ~halt
    instruction = B{1}{ptr};
    if seen(ptr) == 1
        halt = 1;
        break;
    end
    switch instruction
        case 'nop'
            seen(ptr) = 1;
            ptr = ptr+1;          
        case 'acc'
            seen(ptr) = 1;
            accumulator = accumulator + B{2}(ptr);
            ptr = ptr+1;
        case 'jmp'
            seen(ptr) = 1;
            ptr = ptr + B{2}(ptr);
    end
end

% Part 1
fprintf("Accumulator value is: %d\n",accumulator);

